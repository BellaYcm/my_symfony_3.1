{% extends 'base.html.twig' %}

{% block body %}
    <h1>Blog\Post list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog\Post in blog\Posts %}
            <tr>
                <td><a href="{{ path('blog_post_show', { 'id': blog\Post.id }) }}">{{ blog\Post.id }}</a></td>
                <td>{{ blog\Post.title }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('blog_post_show', { 'id': blog\Post.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('blog_post_edit', { 'id': blog\Post.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('blog_post_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
